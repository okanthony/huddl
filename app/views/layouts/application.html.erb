<!DOCTYPE html>
<html>
<head>
  <title>Huddl</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav>
    <ul>
      <% if user_signed_in? %>
        <li><%= link_to 'Sign Out', '#' %></li>
      <% else %>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
      <% end %>
    </ul>
  </nav>

  <% if flash.any? %>
    <div class="alert callout">
      <strong><%= flash[:notice] %></strong>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="column">
        <%= yield %>
      </div>
    </div>
  </div>

</body>
</html>
