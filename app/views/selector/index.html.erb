<div class="large-6 small-12 large-centered columns">
<h2 id="create-team">Create Your Team</h2>

<%= form_for @team, url: teams_path do |f| %>
  <div class= "field">
    <%= f.label :name, "Team Name" %>
    <%= f.text_field :name %>
  </div>

  <div class= "field">
    <%= f.label :sport %>
    <%= f.select :sport, options_for_select(@sports) %>
  </div>

  <div class= "actions">
    <%= f.submit "Create Team" %>
  </div>
<% end %>
</div>
