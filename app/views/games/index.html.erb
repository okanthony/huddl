<h1>Team Name Schedule</h1>

<ul>
  <% @games.each do |game| %>
  <li><%= game.street %>: <%= game.game_day.strftime('%b %eth, %Y') %> <%= game.game_time.in_time_zone('EST').strftime('%l:%M %p') %>
    <% if !game.opponent.empty? %>
      <%= "vs. #{game.opponent}" %>
    <% end %>
    <% if @access %>
      <%= link_to "Edit", edit_game_path(game) %> <%= link_to "Delete", game_path(game), method: :delete, data: { confirm: "Are you sure?" } %>
    <% end %>
  </li>
  <% end %>
</ul>
