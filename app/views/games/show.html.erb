<%= hidden_field( :latitude, :field, :value => @game.latitude ) %>
<%= hidden_field( :longitude, :field, :value => @game.longitude ) %>

<h3 id="game-heading"><%= @game.game_day.strftime('%b %eth, %Y') %> - <%= @game.game_time.in_time_zone('EST').strftime('%l:%M %p') %></h3>
<%= @game.street %> <%= @game.city %>, <%= @game.state %> <%= @game.zip %>


<div id="map-canvas">
</div>

<div id="roster-button"><%= button_to "#{@button_text}", claim_game_confirmations_path(@game), method: :post, class: "button" %></div>

<% unless @roster.empty? %>
  <ul class="vertical menu" data-accordion-menu>
    <li>
      <a href="#"><h3>Roster</h3></a>
      <ul class="menu vertical nested">
        <% @roster.each do |roster| %>
          <li><%= roster.user.first_name %> <%= roster.user.last_name %></li>
        <% end %>
      </ul>
    </li>
  </ul>
<% end %>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyABOogVR1b5VlEmR_2zoYoJH4siK2zS_0c&callback=initMap" async defer></script>
